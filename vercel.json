{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.js" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ],
  "rewrites": [
    { "source": "/:path*", "destination": "/public/:path*.html" }
  ],
  "redirects": [
    { "source": "/:path*.html", "destination": "/:path*", "permanent": true }
  ]
}
