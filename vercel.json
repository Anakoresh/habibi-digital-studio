{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1.js" },
    { "source": "/:path*", "destination": "/:path*.html" }
  ],
  "redirects": [
    { "source": "/:path*.html", "destination": "/:path*", "permanent": true }
  ]
}